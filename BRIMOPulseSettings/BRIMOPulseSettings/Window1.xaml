<Window x:Class="BRIMOPulseSettings.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BRIMOPulseSettings"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="ポート設定" Height="150" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Port Name"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="COM1" Name="txtPortName"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Baud Rate"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="9600"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Parity"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Text="None"/>
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Stop Bits"/>
        <TextBlock Grid.Row="3" Grid.Column="1" Text="1"/>
    </Grid>
</Window>
